<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mate_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_test"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="5dp"
    >

    <RelativeLayout
        android:id="@+id/mate_item_lines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@+id/mate_item_delete"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/mate_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:textSize="17dp"
            />

        <RelativeLayout
            android:id="@+id/mate_item_second_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/mate_item_name"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/mate_item_multi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="PI: 128"
                android:textColor="@color/green"
                android:textSize="13dp"
                />

            <TextView
                android:id="@+id/mate_item_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/mate_item_multi"
                android:text="Payed 25 of 37 rounds"
                android:textSize="13dp"
                />

        </RelativeLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/mate_item_update"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="0dp"
        android:layout_toLeftOf="@+id/mate_item_payment"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical|center_horizontal"
        android:src="@android:drawable/ic_menu_manage"
        android:visibility="invisible"
        />

    <ImageButton
        android:id="@+id/mate_item_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/mate_item_update"
        android:layout_margin="0dp"
        android:layout_toLeftOf="@+id/mate_item_payment"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical|center_horizontal"
        android:src="@android:drawable/ic_menu_delete"
        android:visibility="invisible"
        />

    <ImageButton
        android:id="@+id/mate_item_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:background="@drawable/shape"
        android:gravity="center_vertical|center_horizontal"
        android:padding="12dp"
        android:src="@drawable/ic_payment_black_18dp"
        />

</RelativeLayout>
